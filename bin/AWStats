#!/usr/bin/env node
const program = require('commander')
const packageJson = require('../package.json')
const init = require('../lib/init')
const generate = require('../lib/generated')
const minify = require('../lib/minify')
const server = require('../lib/server')
const deploy = require('../lib/deploy')
const clean = require('../lib/clean')

// 查看版本号
program.version(packageJson.version, '-v, --version')

// 初始化
program
  .command('init')
  .alias('i')
  .description('生成静态文件')
  .action(() => {
    init()
  })

// 生成
program
  .command('generate')
  .alias('g')
  .description('生成静态文件')
  .action(() => {
    generate()
  })

// 压缩
program
  .command('minify')
  .alias('m')
  .description('压缩静态文件')
  .action(() => {
    minify()
  })

// 本地预览
program
  .command('server')
  .alias('s')
  .description('启动本地服务')
  .action(() => {
    server()
  })

// 部署
program
  .command('deploy')
  .alias('d')
  .description('部署静态资源')
  .action(() => {
    deploy()
  })

// 清理
program
  .command('clean')
  .alias('c')
  .description('清理静态文件')
  .action(() => {
    clean()
  })

program.parse(process.argv)
